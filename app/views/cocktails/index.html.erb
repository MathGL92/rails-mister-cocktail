<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top d-flex align-items-center">
  <%= link_to "Cocktail Lover", root_path, class: "navbar-brand" %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="ml-auto d-flex">
      <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search" aria-label="Search" value="<%= params[:query] %>">
        <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </div>
</div>


<div class="home-banner">
  <h1 class="mx-auto mb-5">Cocktail Lover</h1>
  <p>
    <span id="banner-typed-text"></span>
  </p>
  <button class="btn btn-lg btn-outline-light my-5 ml-2 d-flex align-items-center mx-auto button-landing">
    <%= link_to "Add your cocktail", new_cocktail_path(@cocktail)%>
  </button>
</div>

<div class="img-bg">

  <div class="container">

    <div class="row py-3">

      <div class="col" id="query-result">
        <% if @query %>
          <p>You searched for <strong><%= @query %></strong>. We found <%= @cocktails.count %> cocktails out of our <%= Cocktail.count %> on our website.</p>
        <% else %>
          <p>All <%= Cocktail.count %> cocktails.</p>
        <% end %>
      </div>
    </div>

    <div class="row">

      <% @cocktails.each do |cocktail| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key %>')" data-aos="zoom-in">
            <div class="avg-ratings-cocktail"><%= cocktail.reviews.average(:rating) %></div>
            <div>
              <%= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
          </div>
        </div>
      <% end %>

    </div>

  </div>

</div>





