<h1>Recipe of <%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> of <%= dose.ingredient.name %> <span><%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %></span></li>
  <% end %>
</ul>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail) %>

<%= link_to "Back", root_path %>
