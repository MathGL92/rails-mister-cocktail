<%= render 'shared/navbar' %>
<!-- <div class="position-relative" style="top: 60px"> -->

<% if @cocktail.photo.attached? %>
  <div class="banner-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, width: :auto, crop: :fill %>')">
<% else %>
  <div class="banner-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.unsplash.com/photo-1559443922-3f698a0ff27a?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=669&q=80')">
<% end %>
  <h1 class="text-center py-5"><%= @cocktail.name %></h1>

  <div class="container">

    <div class="row d-flex justify-content-center justify-content-lg-between">

      <div class="col-10 col-lg-5 mb-5">
        <div class="my-3 card-recipe">
          <h2 class="my-3">Recipe</h2>
          <div class="ingredients-recipe">
            <% @cocktail.doses.each do |dose| %>
              <div><%= icon('fas', 'cocktail')%>  <%= dose.description %> of <%= dose.ingredient.name %>
                <!-- <span id="sweet-alert-demo" class="ml-2 small"><%#= icon('fas', 'trash-alt') %></span> -->
                <%#= link_to "", dose_path(dose), method: :delete, id: "delete-link", class: "hidden" %>
                <span class="ml-2 small">
                  <%= link_to icon('fas', 'trash-alt'), dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }%>
                </span>
              </div>
            <% end %>
          </div>
        </div>
        <hr>
        <div class="ingredient-add">

          <!-- Button trigger modal -->
          <button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#ingredients-form">
            Add an ingredient <span class="icon-white ml-2"><%= icon('fas', 'cocktail')%></span>
          </button>

          <!-- Modal -->
          <div class="modal fade" id="ingredients-form" tabindex="-1" role="dialog" aria-labelledby="ingredients-form-label" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <%= simple_form_for [ @cocktail, @dose ] do |f| %>
                <div class="modal-header">
                  <h5 class="modal-title d-inline-block" id="ingredients-form-label">Add an ingredient</h5>
                  <span class="ml-2"><%= icon('fas', 'cocktail')%></span>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= f.input :description %>
                  <%= f.association :ingredient, input_html: { class: 'select2' } %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <%= f.button :submit, class: 'btn btn-outline-dark' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>


          <!-- <div class="text-center">
            <h5 class="my-3 d-inline-block">Add an ingredient</h5>
            <span class="icon-white"><%#= icon('fas', 'cocktail')%></span>
          </div>
          <%#= render 'doses/form' %> -->
        </div>
      </div>

      <div class="col-10 col-lg-5">
        <div class="my-3 card-reviews">
          <div class="d-flex align-items-center">
            <h4 class="my-3 d-inline-block mr-2">Reviews</h4>
            <div class="avg-ratings-cocktail stars d-inline-block">
              <% if @cocktail.reviews.any? %>
                <%= icon('fas', 'star') * @cocktail.reviews.average(:rating).to_i %><%= icon('far', 'star') * (5 - @cocktail.reviews.average(:rating).to_i) %>
              <% end %>
            </div>
          </div>
          <% if @cocktail.reviews.empty? %>
            <p>Be the first to let a review</p>
          <% else %>
            <% @cocktail.reviews.each do |review| %>
              <div>
                <p><span class="stars" ><%= icon('fas', 'star') * review.rating%><%= icon('far', 'star') * (5 - review.rating)%></span> - <%= review.content %> <span class="font-italic"> - <%= review.user %></span></p>
              </div>
            <% end %>
          <% end %>
        </div>

        <hr>

        <div class="review-add">

          <!-- <h5 class="my-3 text-center">Add a review</h5> -->

                    <!-- Button trigger modal -->
          <button type="button" class="btn btn-outline-light" data-toggle="modal" data-target="#reviews-form">
            Add a review
          </button>

          <!-- Modal -->
          <div class="modal fade" id="reviews-form" tabindex="-1" role="dialog" aria-labelledby="reviews-form-label" aria-hidden="true">
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <%= simple_form_for [ @cocktail, @review ] do |f| %>
                <div class="modal-header">
                  <h5 class="modal-title" id="reviews-form-label">Add a review</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <%= f.input :user %>
                  <%= f.input :content %>
                  <%= f.input :rating, collection: 0..5 %>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <%= f.button :submit, class: 'btn btn-outline-dark' %>
                  <% end %>
                </div>
              </div>
            </div>
          </div>

          <%#= render 'reviews/form' %>
        </div>

      </div>

    </div>

  </div>
</div>
<%= link_to icon('fas', 'arrow-left'), root_path, class: "mr-3 icon-direction icon-white", id: "arrow-left" %>
