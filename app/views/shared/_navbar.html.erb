<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top d-flex align-items-center">
  <span class="logo-text"><%= link_to image_tag("logo.png"), root_path, class: "navbar-brand" %><%= link_to "Cocktail Lover", root_path %></span>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search" aria-label="Search" value="<%= params[:query] %>">
          <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
        </form>
      </li>

      <%  if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-link btn ml-2 btn-light" %>
        </li>
      <% else %>
        <li class="nav-item ml-3">
          <%= link_to "Sign In", new_user_session_path, class: "nav-link btn ml-2 btn-light" %>
        </li>
      <% end %>
    </ul>

  </div>
</div>
